{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": ".vscode/tsconfig.json",
            "option": "watch",
            "problemMatcher":"$tsc-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc:watch - .vscode/tsconfig.json"
            
        }
    ],
    "command": "tsc",
    "isShellCommand":true,
    "showOutput":"silent",
    "args": ["--target","ES6","--outDir","js",
    "--sourceMap","--watch"],
    
    "problemMatcher": "$tsc",
    "group": {
        "kind": "build",
        "isDefault": true
    }
    
}